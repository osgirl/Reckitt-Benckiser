<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clipChildren="false"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="8dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dettol_handwash" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp">

            <com.ad.reckittbenckiser.views.CustomTextView
                android:id="@+id/tv_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="10dp"
                android:text="Vision"
                android:textColor="@color/primary_text"
                android:textSize="20sp"
                app:font="@string/omens_bold" />

            <LinearLayout
                android:id="@+id/ll_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <com.ad.reckittbenckiser.views.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Growth "
                    android:textSize="15sp"
                    app:font="@string/omens_regular" />

                <com.ad.reckittbenckiser.views.CustomTextView
                    android:id="@+id/tv_growth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.0%"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    app:font="@string/omens_regular" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/deep_purple"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="10dp">

                <com.ad.reckittbenckiser.views.CustomTextView
                    android:id="@+id/tv_opp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="168.6"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:font="@string/omens_medium" />

                <com.ad.reckittbenckiser.views.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Opportunity(in Lakhs)"
                    android:textSize="13sp"
                    app:font="@string/omens_regular" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/white"></View>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
