            <LinearLayout
                android:id="@+id/l2_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/deep_purple"
                android:elevation="6dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <com.ad.reckittbenckiser.views.CustomTextView
                        android:id="@+id/customTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Opportunity\n(in Lakhs)"
                        android:textColor="@color/primary_text"
                        android:textSize="15sp"
                        app:font="@string/omens_regular" />

                    <com.ad.reckittbenckiser.views.CustomTextView
                        android:id="@+id/tv_oppor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="994.6"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:font="@string/omens_regular" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <com.ad.reckittbenckiser.views.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Growth Monthly - Jul'16"
                        android:textColor="@color/primary_text"
                        android:textSize="15sp"
                        app:font="@string/omens_regular" />

                    <com.ad.reckittbenckiser.views.CustomTextView
                        android:id="@+id/monthly_growth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14.1%"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        app:font="@string/omens_regular" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <com.ad.reckittbenckiser.views.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Growth \nQTD"
                        android:textColor="@color/primary_text"
                        android:textSize="15sp"
                        app:font="@string/omens_regular" />

                    <com.ad.reckittbenckiser.views.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(in Lakhs)"
                        android:textColor="@color/secondary_text"
                        android:textSize="15sp"
                        android:visibility="gone"
                        app:font="@string/omens_regular" />

                    <com.ad.reckittbenckiser.views.CustomTextView
                        android:id="@+id/qtr_growth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.9%"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        app:font="@string/omens_regular" />

