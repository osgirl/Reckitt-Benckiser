            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <com.ad.reckittbenckiser.views.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="Opportunity from\nbilled stores"
                    android:textColor="@color/primary_text"
                    android:textSize="15sp"
                    app:font="@string/omens_medium" />

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/chart"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="@dimen/margin10" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <com.ad.reckittbenckiser.views.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="Opportunity from\nUnbilled stores"
                    android:textColor="@color/primary_text"
                    android:textSize="15sp"
                    app:font="@string/omens_medium" />

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/unbilledChart"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="@dimen/margin10" />

            </LinearLayout>
        </LinearLayout>

        <com.ad.reckittbenckiser.views.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="TSI/ASE list and opportunity in lakh"
            android:textColor="@color/primary_text"
            android:textSize="15sp"
            app:font="@string/omens_medium" />

        <include
            layout="@layout/fragment_tsi_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:visibility="visible" />

        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/bar_chart"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginTop="@dimen/margin10"
            android:visibility="gone"></com.github.mikephil.charting.charts.HorizontalBarChart>
