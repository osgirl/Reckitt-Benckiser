<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame"
    tools:context=".activities.SplashActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/splash_01"
        android:scaleType="centerCrop"
    />

    <LinearLayout
        android:id="@+id/layoutKiaOra"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/background_circle_blue"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_marginBottom="25dp">

        <TextView
            android:id="@+id/txtKiaOra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_gravity="bottom|center_horizontal"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/txtUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sjs"
            android:padding="5dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:visibility="gone"
            android:textSize="15dp"
            android:textColor="@android:color/white"
            />
    </LinearLayout>

    <com.ad.reckittbenckiser.views.CustomTextView
        android:text="Healthier \nHappier \nStronger"
        android:textColor="#405A69"
        app:font="@string/omens_medium"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin20"
        android:id="@+id/textView2" />

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@mipmap/rb_logo"
        android:layout_gravity="center"
        android:layout_marginBottom="120dp"
        android:id="@+id/imageView" />

</FrameLayout>


