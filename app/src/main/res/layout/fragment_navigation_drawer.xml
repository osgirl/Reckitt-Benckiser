<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:visibility="gone"
    android:scrollbars="none"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.NavigationDrawerActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/margin20"
        android:visibility="gone"
        android:orientation="vertical"
        android:clickable="true"
        >

        <ImageView
            android:id="@+id/menuExit"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="fitCenter"
            android:paddingRight="@dimen/margin5"
            android:paddingTop="@dimen/margin5"
            android:paddingBottom="@dimen/margin5"
            android:layout_marginTop="@dimen/margin10"
            />

        <TextView
            android:id="@+id/txtMenuKiaOra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_size_heading"
            android:textColor="@android:color/white"
            android:layout_marginTop="35dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guest"
            android:textSize="@dimen/txt_menu_normal"
            android:textColor="@android:color/white"
            android:layout_marginTop="@dimen/margin5"
            android:id="@+id/menuTxtUserName" />

        <View
            android:layout_width="40dp"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin15"
            android:background="@android:color/darker_gray"></View>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="News"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/margin15"
            android:textSize="@dimen/txt_menu_normal"
            android:layout_marginTop="@dimen/margin30"
            android:id="@+id/menuNewsFeed" />

        <View
            android:layout_width="190dp"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin15"
            android:background="@android:color/darker_gray"></View>

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="match_parent">

        </ListView>
    </LinearLayout>
</ScrollView>