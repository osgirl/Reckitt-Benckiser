<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clipChildren="false"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="8dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:clickable="true"
        android:padding="10dp">

        <View
            android:id="@+id/view"
            android:layout_width="5dp"
            android:layout_height="match_parent"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.ad.reckittbenckiser.views.CustomTextView
                android:id="@+id/tv_tsi_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="10dp"
                android:text="Raipur Tsi"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                app:font="@string/omens_bold" />

            <com.ad.reckittbenckiser.views.CustomTextView
                android:id="@+id/tv_channel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="URBAN"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                app:font="@string/omens_regular" />

            <LinearLayout
                android:id="@+id/ll_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_purple"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <com.ad.reckittbenckiser.views.CustomTextView
                        android:id="@+id/tv_growth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3.0%"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp"
                        app:font="@string/omens_regular" />

                    <com.ad.reckittbenckiser.views.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Growth"
                        android:textSize="13sp"
                        app:font="@string/omens_regular" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <com.ad.reckittbenckiser.views.CustomTextView
                        android:id="@+id/tv_as"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="188.2"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp"
                        app:font="@string/omens_regular" />

                    <com.ad.reckittbenckiser.views.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Average Sales(in Lakhs)"
                        android:textSize="13sp"
                        app:font="@string/omens_regular" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/deep_purple"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="10dp">

                <com.ad.reckittbenckiser.views.CustomTextView
                    android:id="@+id/tv_opp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:text="168.6"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    app:font="@string/omens_bold" />

                <com.ad.reckittbenckiser.views.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Opportunity(in Lakhs)"
                    android:textSize="13sp"
                    app:font="@string/omens_regular" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
