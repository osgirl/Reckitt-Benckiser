<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_white_pattern"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/storyHeaderImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/east"
            android:scaleType="centerCrop" />

        <com.ad.reckittbenckiser.views.CustomTextView
            android:id="@+id/storyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin20"
            android:layout_marginRight="@dimen/margin40"
            android:layout_marginTop="@dimen/margin20"
            android:text="East Zone"
            android:textColor="@color/primary_text"
            android:textSize="20dp"
            app:font="@string/omens_medium" />

        <View
            android:layout_width="60dp"
            android:layout_height="2dp"
            android:layout_marginLeft="@dimen/margin20"
            android:layout_marginRight="@dimen/margin20"
            android:layout_marginTop="@dimen/margin10"
            android:background="@color/primary_text" />

        <TextView
            android:id="@+id/storyDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin20"
            android:layout_marginRight="@dimen/margin20"
            android:layout_marginTop="@dimen/margin10"
            android:text="There will be some description of the zone. \nThere will be some description of the zone.\nThere will be some description of the zone. \nThere will be some description of the zone."
            android:textColor="@color/secondary_text"
            android:textSize="16dp"
            android:visibility="gone" />

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin10"
            android:background="@color/white"
            android:clipChildren="false"
            android:visibility="gone"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="8dp"
            card_view:cardUseCompatPadding="true">

            <com.ad.reckittbenckiser.views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overall Opportunity 50Lakh"
                android:textSize="20sp"
                app:font="@string/omens_medium" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:clipChildren="false"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="8dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/ll_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.ad.reckittbenckiser.views.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin10"
                        android:text="Opportunity (Lakh)"
                        android:textColor="@color/primary_text"
                        android:textSize="20sp"
                        app:font="@string/omens_medium" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin10"
                        android:background="@color/purple_darker"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <com.ad.reckittbenckiser.views.CustomTextView
                            android:id="@+id/tv_opp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="994.6"
                            android:textColor="@color/primary_text"
                            android:textSize="18sp"
                            app:font="@string/omens_bold" />
                    </LinearLayout>

                    <com.ad.reckittbenckiser.views.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin10"
                        android:text="Chhattisgarh Growth"
                        android:textColor="@color/secondary_text"
                        android:textSize="20sp"
                        app:font="@string/omens_medium" />

                    <LinearLayout
                        android:id="@+id/l2_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin10"
                        android:background="@color/deep_purple"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <com.ad.reckittbenckiser.views.CustomTextView
                                android:id="@+id/monthly_growth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="14.0%"
                                android:textColor="@color/primary_text"
                                android:textSize="15sp"
                                app:font="@string/omens_regular" />

                            <com.ad.reckittbenckiser.views.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Monthly - Jul'16"
                                android:textColor="@color/secondary_text"
                                android:textSize="15sp"
                                app:font="@string/omens_regular" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <com.ad.reckittbenckiser.views.CustomTextView
                                android:id="@+id/qtr_growth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4.9%"
                                android:textColor="@color/primary_text"
                                android:textSize="15sp"
                                app:font="@string/omens_regular" />

                            <com.ad.reckittbenckiser.views.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="QTD"
                                android:textColor="@color/secondary_text"
                                android:textSize="15sp"
                                app:font="@string/omens_regular" />
                        </LinearLayout>
                    </LinearLayout>

                    <com.ad.reckittbenckiser.views.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin10"
                        android:text="Unbilled Store"
                        android:textColor="@color/secondary_text"
                        android:textSize="20sp"
                        app:font="@string/omens_medium" />

                    <LinearLayout
                        android:id="@+id/ll_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin10"
                        android:background="@color/light_purple"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <com.ad.reckittbenckiser.views.CustomTextView
                                android:id="@+id/urbanStore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1339"
                                android:textColor="@color/primary_text"
                                android:textSize="15sp"
                                app:font="@string/omens_regular" />

                            <com.ad.reckittbenckiser.views.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Urban Stores"
                                android:textSize="13sp"
                                app:font="@string/omens_regular" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <com.ad.reckittbenckiser.views.CustomTextView
                                android:id="@+id/ruralStore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="86"
                                android:textColor="@color/primary_text"
                                android:textSize="15sp"
                                app:font="@string/omens_regular" />

                            <com.ad.reckittbenckiser.views.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rural Stores"
                                android:textSize="13sp"
                                app:font="@string/omens_regular" />
                        </LinearLayout>
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white"></View>

                </LinearLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="5dp"
                    android:layout_height="match_parent"></View>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <com.ad.reckittbenckiser.views.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin20"
            android:layout_marginRight="@dimen/margin40"
            android:layout_marginTop="@dimen/margin20"
            android:text="Opportunity from billed stores"
            android:textColor="@color/primary_text"
            android:textSize="20dp"
            app:font="@string/omens_medium" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chart"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin10" />

        <com.ad.reckittbenckiser.views.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin20"
            android:layout_marginRight="@dimen/margin40"
            android:layout_marginTop="@dimen/margin20"
            android:text="Opportunity from Unbilled stores"
            android:textColor="@color/primary_text"
            android:textSize="20dp"
            app:font="@string/omens_medium" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/unbilledChart"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin10" />

        <com.ad.reckittbenckiser.views.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin20"
            android:layout_marginRight="@dimen/margin40"
            android:layout_marginTop="@dimen/margin20"
            android:text="East region store segment"
            android:textColor="@color/primary_text"
            android:textSize="20dp"
            app:font="@string/omens_medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginRight="@dimen/margin20"
            android:layout_marginTop="@dimen/margin10"
            android:text=" The store coverage has dipped by 9% y-o-y."
            android:textColor="@color/secondary_text"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/storeCoverage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="@dimen/margin20"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginRight="@dimen/margin10"
            android:layout_marginTop="@dimen/margin20"
            android:background="@drawable/chart"
            android:scaleType="centerCrop" />

    </LinearLayout>
</ScrollView>