<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="@drawable/app_blue_background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin20"
        android:paddingRight="@dimen/margin20"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_size_heading"
            android:textColor="@android:color/white"
            android:text="Login"
            android:layout_marginTop="@dimen/margin30"
            android:id="@+id/registerHeading1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_size_heading"
            android:layout_marginTop="-10dp"
            android:textColor="@android:color/white"
            android:text="to RB "
            android:visibility="gone"
            android:id="@+id/registerHeading2" />

        <View
            android:layout_width="40dp"
            android:layout_height="2dp"
            android:background="@android:color/white"
            android:layout_marginTop="@dimen/margin15"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_size_small"
            android:textColor="@android:color/white"
            android:text="Email"
            android:layout_marginTop="@dimen/margin30"
            android:id="@+id/loginEmail" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/editText_height"
            android:layout_marginTop="@dimen/margin5"
            android:background="@drawable/curve_corner"
            android:paddingRight="@dimen/margin10"
            android:paddingLeft="@dimen/margin20"
            android:hint="email"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:gravity="center_vertical"
            android:id="@+id/editEmail" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_size_small"
            android:textColor="@android:color/white"
            android:text="Passsword"
            android:layout_marginTop="@dimen/margin20"
            android:id="@+id/loginPassword" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/editText_height"
            android:layout_marginTop="@dimen/margin5"
            android:background="@drawable/curve_corner"
            android:paddingRight="@dimen/margin10"
            android:paddingLeft="@dimen/margin20"
            android:hint="Password"
            android:password="true"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            android:id="@+id/editPassword" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin10"
            android:textColor="@android:color/white"
            android:gravity="right"
            android:text="Forget Password"
            android:textSize="@dimen/txt_size_bottom"
            android:id="@+id/txtForgetPswd" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin20"
        android:paddingRight="@dimen/margin20"
        android:layout_marginBottom="@dimen/margin20"
        android:layout_marginTop="@dimen/margin5"
        >

        <TextView
            android:id="@+id/txtLogin"
            android:layout_width="200dp"
            android:textSize="@dimen/txt_size_bottom"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/arrow_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/border_circle_white"
            android:id="@+id/btnLogin" />
    </RelativeLayout>
</LinearLayout>
