<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="@drawable/app_blue_background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin20"
        android:paddingRight="@dimen/margin20">

        <TextView
            android:id="@+id/registerHeading1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin30"
            android:text="Login"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_size_heading" />

        <TextView
            android:id="@+id/registerHeading2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:text="to RB "
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_size_heading"
            android:visibility="gone" />

        <View
            android:layout_width="40dp"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/margin15"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/loginEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin30"
            android:text="Email"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_size_small" />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editText_height"
            android:layout_marginTop="@dimen/margin5"
            android:background="@drawable/curve_corner"
            android:hint="email"
            android:inputType="textEmailAddress"
            android:paddingLeft="@dimen/margin20"
            android:paddingRight="@dimen/margin10"
            android:singleLine="true" />

        <TextView
            android:id="@+id/loginPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin20"
            android:text="Passsword"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_size_small" />

        <EditText
            android:id="@+id/editPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editText_height"
            android:layout_marginTop="@dimen/margin5"
            android:background="@drawable/curve_corner"
            android:gravity="center_vertical"
            android:hint="Password"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/margin20"
            android:paddingRight="@dimen/margin10"
            android:password="true"
            android:singleLine="true" />

        <TextView
            android:id="@+id/txtForgetPswd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin10"
            android:gravity="right"
            android:text="Forget Password"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_size_bottom" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin20"
        android:layout_marginTop="@dimen/margin5"
        android:paddingLeft="@dimen/margin20"
        android:paddingRight="@dimen/margin20">

        <TextView
            android:id="@+id/txtLogin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:singleLine="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_size_bottom" />

        <ImageView
            android:id="@+id/btnLogin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/border_circle_white"
            android:src="@drawable/arrow_right" />
    </RelativeLayout>
</LinearLayout>
